.chat-main
  .chat-main__group-info
    .chat-main__group-info__name
      = @group.name
      .chat-main__group-info__name__member
        Member :
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__edit
      = link_to edit_group_path(@group) do
        Edit

  .chat-main__message-list
    = render @messages
  
  .chat-main__group-info__message-bar
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message-form', placeholder: ' type a message'
      .chat-main__message-form__message-bar__type
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
